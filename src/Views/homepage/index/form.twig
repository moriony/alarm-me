{% if error %}
    <div class="alert alert-danger">
        {{ error }}
    </div>
{% endif %}

<form method="post" class="form-horizontal">
    <fieldset>
        <div class="form-group">
            <div class=" col-lg-4">
                <label for="project">Project</label>
                <select name="project" id="project" class="form-control input-lg">
                    {% for title, project in projects %}
                        <option value="{{ title }}">{{ title }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class=" col-lg-12">
                <textarea name="message" id="message" class="form-control input-block-level" cols="100" rows="3" placeholder="Happens shit? Report about it!"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class=" col-lg-2">
                <button type="submit" class="btn btn-danger btn-lg btn-block">
                    <i class="glyphicon glyphicon-fire"></i> Report
                </button>
            </div>
        </div>
    </fieldset>
</form>